@using MvcCv.Models.Entity
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />

<h4>Eğitim Hayatım</h4>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık 1</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Subtitle1</td>
            <td>@item.Subtitle2</td>
            <td>@item.Note</td>
            <td>@item.Date</td>
           
            <td>
                <a class="btn btn-info btn-sm" href="/Education/EducationUpdate/@item.ID">
                    <i class="fas fa-pencil-alt"></i>
                    Güncelle
                </a>
            </td>


            <td>
                <a class="btn btn-danger btn-sm" href="/Education/EducationDelete/@item.ID">
                    <i class="fas fa-trash"></i>
                    Sil
                </a>
            </td>
        </tr>
    }
</table>
<a href="/Education/EducationGet/" class="btn btn-outline-primary">Yeni Eğitim Bilgisi Ekle</a>

