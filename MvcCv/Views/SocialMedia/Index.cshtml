@using MvcCv.Models.Entity
@model List<TblSocialMedia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Sosyal Medya Hesaplarım</h4>
                            </div>
                            <div class="card-body">
                                <table class="table table-bordered">
                                    
                                        <tr>
                                            
                                            <th>#</th>
                                            <th>Sosyal Medya</th>                                          
                                            <th>Durum</th>                                          
                                            <th>Düzenle</th>
                                            <th>Sil</th>
                                        </tr>
                                   
                                        <div><tbody>

                                        @foreach (var item in Model)
                                        {
                                           <tr>
                                               <td>@item.ID</td>
                                               <td>@item.Name</td>

                                               @if(item.Durum==true)

                                               {
                                               <td>Aktif</td>
                                               }

                                               else

                                               {
                                               <td>Pasif</td>
                                               }


                                               <td>
                                                   <a class="btn btn-info btn-sm" href="/SocialMedia/SocialMediaUpdate/@item.ID">
                                                       <i class="fas fa-pencil-alt"></i>
                                                       Düzenle
                                                   </a>
                                               </td>
                                               <td>
                                                   <a class="btn btn-danger btn-sm" href="/SocialMedia/SocialMediaDelete/@item.ID">
                                                       <i class="fas fa-trash"></i>
                                                       Sil
                                                   </a>
                                               </td>
                                           </tr>
                                        }
                                    </tbody></div>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>


        <div class="modal" id="Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Sosyal Medya Ekleme Penceresi</h2>
                    </div>
                    <form method="post" action="/SocialMedia/SocialMediaAdd">
                        <div class="modal-body">
                            <label>Sosyal Medya İsmi</label>
                            <input type="text" name="Name" class="form-control" />
                            <br />
                            <label>Sosyal Medya Linki</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label>İkon Değeri</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-success">Kaydet</button>
                            <br />
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </div>
</body>
<button class="btn btn-outline-primary" data-toggle="modal" data-target="#Modal1">Yeni Sosyal Medya Ekle</button>
</html>

