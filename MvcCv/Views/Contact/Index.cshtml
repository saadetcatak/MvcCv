@using MvcCv.Models.Entity
@model List<TblContact>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                              
                                   
                                <div class="timeline timeline-inverse">

                                    @foreach (var item in Model)
                                    {
                                      
                                        <div class="time-label">
                                            <span class="bg-secondary">
                                                @(((DateTime)item.Date).ToString("dd-MMM-yyyy"))
                                            </span>
                                        </div>


                                        <div>
                                            <i class="fas fa-envelope bg-cyan"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="fas fa-mail-reply"></i>@item.Email</span>
                                                <h3 class="timeline-header"><a href="#">@item.NameSurname</a> "@item.Subject" Konulu bir mesaj gönderdi.</h3>

                                                <div class="timeline-body">
                                                    @item.Message
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Contact/DeleteContact/@item.ID" class="btn btn-danger btn-flat btn-sm"><i class="fas fa-trash"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    }


                                    </div>
                                
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>