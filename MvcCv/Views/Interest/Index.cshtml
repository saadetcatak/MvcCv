@using MvcCv.Models.Entity
@model List<TblInterest>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<br />
<br />
<h4 class="container">İlgi Alanlarım</h4>
<table class="table ui-sortable-handle container">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>


        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Description1</td>
            <td>@item.Description2</td>


            <td><a href="/Interest/InterestDelete/@item.ID" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i>Sil</a></td>
            <td><a href="/Interest/InterestUpdate/@item.ID" class="btn btn-info btn-sm"><i class="fas fa-edit"></i>Düzenle</a></td>
        </tr>
    }

</table>
<div class="container">
    <a href="/Interest/InterestAdd/" class="btn btn-outline-primary">Yeni İlgi Alanı Ekle</a>
</div>

