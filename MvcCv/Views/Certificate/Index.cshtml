@using MvcCv.Models.Entity
@model List<TblCertificate>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h4>Sertifikalarım</h4>
@{ string colour = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
            <section class="content">
                <div class="container-fluid">
                    <div class="row">                        
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header p-2">                                   
                                </div><!-- /.card-header -->
                                <div class="card-body">                                                                        
                                        <!-- /.tab-pane -->
                                        <div class="tab-pane" id="timeline">
                                            <!-- The timeline -->
                                            <div class="timeline timeline-inverse">
                                                <!-- timeline time label -->
                                            @foreach(var item in Model) 
                                            {
                                                if(item.ID%2==0)
                                                {
                                                    colour = "btn btn-success";

                                                }
                                                else
                                                {
                                                    colour= "btn btn-primary";
                                                }
                                                <div class="time-label">
                                                    <a href="/Certificate/CertificateGet/@item.ID" class="@colour">
                                                        <span class="@colour">
                                                            @item.Date
                                                        </span>
                                                    </a>
                                                </div>
                                            
                                                <div>
                                                  

                                                    <div class="timeline-item">

                                                        <div class="timeline-body">
                                                          @item.Description
                                                        </div>
                                                        
                                                    </div>
                                                </div> 
                                            }
                                            </div> 
                                            <a href="/Certificate/NewCertificate" class="btn btn-outline-primary">Yeni Sertifika Ekle</a>
                                        </div>
                                    </div>                                   
                              </div>
                           </div>                       
                        </div>                  
                    </div>
                  
  </section>
</body>
</html>
